# Prevent extraneous packages from being installed
fund=false
audit=false
save-exact=true

# Use npm ci for faster, reliable installs
# This ensures package-lock.json is always used
engine-strict=true

# Prevent peer dependency warnings from becoming errors
legacy-peer-deps=false

# Use npm's built-in deduplication
dedupe=true

# Ensure consistent package resolution
package-lock=true